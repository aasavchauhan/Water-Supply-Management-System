generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  passwordHash String    @map("password_hash")
  fullName     String    @map("full_name")
  role         String    @default("admin")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  lastLogin    DateTime? @map("last_login")
  isActive     Boolean   @default(true) @map("is_active")

  farmers       Farmer[]
  supplyEntries SupplyEntry[]
  payments      Payment[]
  settings      Settings?

  @@index([email])
  @@index([role])
  @@map("users")
}

model Farmer {
  id           String   @id @default(uuid())
  userId       String   @map("user_id")
  name         String
  mobile       String
  farmLocation String?  @map("farm_location")
  defaultRate  Decimal  @default(60.00) @map("default_rate") @db.Decimal(10, 2)
  balance      Decimal  @default(0.00) @db.Decimal(12, 2)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  isActive     Boolean  @default(true) @map("is_active")

  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  supplyEntries SupplyEntry[]
  payments      Payment[]

  @@index([userId])
  @@index([mobile])
  @@index([name])
  @@index([balance])
  @@index([createdAt])
  @@map("farmers")
}

model SupplyEntry {
  id                 String   @id @default(uuid())
  userId             String   @map("user_id")
  farmerId           String   @map("farmer_id")
  date               DateTime @default(now()) @db.Date
  billingMethod      String   @default("meter") @map("billing_method")
  startTime          String?  @map("start_time")
  stopTime           String?  @map("stop_time")
  pauseDuration      Decimal  @default(0.00) @map("pause_duration") @db.Decimal(5, 2)
  meterReadingStart  Decimal  @default(0.00) @map("meter_reading_start") @db.Decimal(10, 2)
  meterReadingEnd    Decimal  @default(0.00) @map("meter_reading_end") @db.Decimal(10, 2)
  totalTimeUsed      Decimal  @map("total_time_used") @db.Decimal(10, 2)
  totalWaterUsed     Decimal  @default(0.00) @map("total_water_used") @db.Decimal(12, 2)
  rate               Decimal  @db.Decimal(10, 2)
  amount             Decimal  @db.Decimal(12, 2)
  remarks            String?
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  farmer Farmer @relation(fields: [farmerId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([farmerId])
  @@index([date])
  @@index([createdAt])
  @@index([billingMethod])
  @@index([farmerId, date(sort: Desc)])
  @@index([userId, date(sort: Desc)])
  @@map("supply_entries")
}

model Payment {
  id            String   @id @default(uuid())
  userId        String   @map("user_id")
  farmerId      String   @map("farmer_id")
  amount        Decimal  @db.Decimal(12, 2)
  paymentMethod String   @default("cash") @map("payment_method")
  transactionId String?  @map("transaction_id")
  remarks       String?
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  paymentDate   DateTime @default(now()) @map("payment_date") @db.Date

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  farmer Farmer @relation(fields: [farmerId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([farmerId])
  @@index([paymentDate])
  @@index([createdAt])
  @@index([paymentMethod])
  @@index([farmerId, paymentDate(sort: Desc)])
  @@map("payments")
}

model Settings {
  id                 String   @id @default(uuid())
  userId             String   @unique @map("user_id")
  businessName       String   @default("Water Supply Management") @map("business_name")
  businessAddress    String?  @map("business_address")
  businessPhone      String?  @map("business_phone")
  businessEmail      String?  @map("business_email")
  defaultHourlyRate  Decimal  @default(60.00) @map("default_hourly_rate") @db.Decimal(10, 2)
  currency           String   @default("INR")
  currencySymbol     String   @default("â‚¹") @map("currency_symbol")
  timezone           String   @default("Asia/Kolkata")
  dateFormat         String   @default("DD/MM/YYYY") @map("date_format")
  timeFormat         String   @default("12h") @map("time_format")
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("settings")
}
