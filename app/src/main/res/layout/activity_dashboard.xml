<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground">

    <!-- Modern App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:title="Dashboard"
            app:titleTextAppearance="@style/TextAppearance.App.HeadlineLarge"
            app:titleTextColor="?attr/colorOnBackground" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_md">

            <!-- Welcome Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/spacing_lg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome back,"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Gradient Stat Cards Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="@dimen/spacing_md">

                <!-- Total Farmers Card with Purple Gradient -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardFarmers"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/stat_card_height"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    android:backgroundTint="@android:color/transparent"
                    app:cardElevation="@dimen/elevation_md"
                    app:cardCornerRadius="@dimen/corner_radius_lg">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Gradient Background -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_gradient_purple" />

                        <!-- Content -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_md"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/icon_size_lg"
                                android:layout_height="@dimen/icon_size_lg"
                                android:src="@drawable/ic_person"
                                app:tint="@color/white"
                                android:alpha="0.9"
                                android:contentDescription="Farmers icon" />

                            <TextView
                                android:id="@+id/tvFarmerCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="@dimen/spacing_sm" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Farmers"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:alpha="0.9"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Water Supplied Card with Blue Gradient -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardWaterSupplied"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/stat_card_height"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:backgroundTint="@android:color/transparent"
                    app:cardElevation="@dimen/elevation_md"
                    app:cardCornerRadius="@dimen/corner_radius_lg">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Gradient Background -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_gradient_blue" />

                        <!-- Content -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_md"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/icon_size_lg"
                                android:layout_height="@dimen/icon_size_lg"
                                android:src="@drawable/ic_water"
                                app:tint="@color/white"
                                android:alpha="0.9"
                                android:contentDescription="Water icon" />

                            <TextView
                                android:id="@+id/tvWaterSupplied"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0h"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="@dimen/spacing_sm" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Water Supplied"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:alpha="0.9"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Gradient Stat Cards Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="@dimen/spacing_lg">

                <!-- Total Income Card with Green Gradient -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardTotalIncome"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/stat_card_height"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    android:backgroundTint="@android:color/transparent"
                    app:cardElevation="@dimen/elevation_md"
                    app:cardCornerRadius="@dimen/corner_radius_lg">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Gradient Background -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_gradient_green" />

                        <!-- Content -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_md"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/icon_size_lg"
                                android:layout_height="@dimen/icon_size_lg"
                                android:src="@drawable/ic_money"
                                app:tint="@color/white"
                                android:alpha="0.9"
                                android:contentDescription="Money icon" />

                            <TextView
                                android:id="@+id/tvTotalIncome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹0"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="@dimen/spacing_sm" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Income"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:alpha="0.9"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Pending Dues Card with Orange Gradient -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPendingDues"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/stat_card_height"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:backgroundTint="@android:color/transparent"
                    app:cardElevation="@dimen/elevation_md"
                    app:cardCornerRadius="@dimen/corner_radius_lg">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Gradient Background -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_gradient_orange" />

                        <!-- Content -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_md"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/icon_size_lg"
                                android:layout_height="@dimen/icon_size_lg"
                                android:src="@drawable/ic_pending"
                                app:tint="@color/white"
                                android:alpha="0.9"
                                android:contentDescription="Pending icon" />

                            <TextView
                                android:id="@+id/tvPendingDues"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹0"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="@dimen/spacing_sm" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pending Dues"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:alpha="0.9"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Quick Actions Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="@dimen/spacing_md" />

            <!-- Quick Action Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="@dimen/spacing_lg">

                <!-- Add Supply Entry -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAddSupply"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardElevation="@dimen/elevation_sm"
                    app:cardCornerRadius="@dimen/corner_radius_lg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/icon_size_lg"
                            android:layout_height="@dimen/icon_size_lg"
                            android:src="@drawable/ic_add"
                            app:tint="?attr/colorPrimary"
                            android:contentDescription="Add supply" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Supply"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/spacing_sm" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Add Payment -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAddPayment"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardElevation="@dimen/elevation_sm"
                    app:cardCornerRadius="@dimen/corner_radius_lg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/icon_size_lg"
                            android:layout_height="@dimen/icon_size_lg"
                            android:src="@drawable/ic_payment"
                            app:tint="?attr/colorSecondary"
                            android:contentDescription="Add payment" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Payment"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/spacing_sm" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Add Farmer -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAddFarmer"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardElevation="@dimen/elevation_sm"
                    app:cardCornerRadius="@dimen/corner_radius_lg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/icon_size_lg"
                            android:layout_height="@dimen/icon_size_lg"
                            android:src="@drawable/ic_person_add"
                            app:tint="?attr/colorTertiary"
                            android:contentDescription="Add farmer" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Farmer"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/spacing_sm" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Recent Activity Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Activity"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="@dimen/spacing_md" />

            <!-- Recent Activity Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/elevation_sm"
                app:cardCornerRadius="@dimen/corner_radius_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        android:id="@+id/tvNoActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No recent activity"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:gravity="center"
                        android:padding="@dimen/spacing_lg" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recentActivityRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        tools:listitem="@layout/item_recent_activity"
                        tools:itemCount="3" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
