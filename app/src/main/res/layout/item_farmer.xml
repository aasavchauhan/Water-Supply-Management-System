<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardFarmer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_md"
    android:layout_marginVertical="@dimen/spacing_xs"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:importantForAccessibility="yes"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:minHeight="80dp">

        <!-- Farmer Photo / Icon -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivFarmerPhoto"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_person"
            android:scaleType="centerInside"
            android:background="@drawable/bg_circle_light_blue"
            android:padding="10dp"
            app:tint="@color/brand_primary"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            android:contentDescription="Farmer photo" />

        <!-- Info Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farmer Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/neutral_900"
                android:maxLines="1"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">
                
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_phone"
                    app:tint="@color/neutral_500"
                    android:contentDescription="Phone" />
                
                <TextView
                    android:id="@+id/tvMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Mobile"
                    android:textSize="13sp"
                    android:textColor="@color/neutral_500" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">
                
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_money"
                    app:tint="@color/brand_primary"
                    android:contentDescription="Balance" />
                
                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Balance: â‚¹0.00"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/brand_primary" />
            </LinearLayout>

        </LinearLayout>

        <!-- Action Menu -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMenu"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:icon="@drawable/ic_more_vert"
            app:iconSize="20dp"
            app:iconTint="@color/neutral_500"
            android:contentDescription="More options" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
